extends ../../layouts/default.pug

block main
    if(role.permissions.includes("product-category_detail"))
        if(record.title)
            h1(class="mb-4") #{record.title}
        
        if(record.price)
            h1(class="mb-4") Giá: <b>#{record.price}<b>

        if(record.discountPercentage)
            h1(class="mb-4") Giảm Giá: <b>#{record.discountPercentage}%<b>

        if(record.stock)
            h1(class="mb-4") Còn lại: <b>#{record.stock}<b>
        
        if(record.thumbnail)
            div(class="mb-4")
                img(
                    src=record.thumbnail
                    style="width: 100px"
                )

        if(record.status)
            div(class="mb-4")
                span Trạng thái:
                if(record.status === "active")
                    span(class="badge badge-success") Hoạt động
                else
                    span(class="badge badge-success") Dừng hoạt động
        
        if(record.position)
            div(class="mb-4") Vị trí: <b>#{record.position}<b>

        if(record.description)
            //- Nếu dùng dấu # thì nó sẽ ko hiện ra được html nó sẽ hiện ra dòng code nên dùng dấu ! để hiển thị đoạn mã html dùng cho tinymce
            div(class="mb-4")  !{record.description} 

        a(
            href=`${prefixAdmin}/product-category/edit/${record.id}`
            class="btn btn-warning" 
        ) Chỉnh sửa
    else
        h1 Bạn Không có quyền truy cập
                
  
  
  
  
  

    script(src="/admin/js/record.js")